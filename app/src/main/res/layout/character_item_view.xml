<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/character_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/character_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="@string/app_name" />

        <ImageView
            android:id="@+id/character_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/character_name"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/character_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/character_image"
            android:padding="10dp"
            android:text="@string/character_details"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/character_comic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/character_details"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/character_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/character_comic"
            android:textColor="@android:color/black"
            tools:text="@string/app_name" />

        <Button
            android:id="@+id/character_url_btn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/character_type"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:text="@string/see_more_character_info"
            android:textColor="@color/colorAccent" />


    </RelativeLayout>

</android.support.v7.widget.CardView>